@model PBJProject.Domain.Models.Account

<main class="row" style="flex-direction:column"> 
<div style="padding:50px 400px 100px">
      <h4 style="margin-bottom: 25px">Log In to Familiar</h4>

 @using (Html.BeginForm("index","login")){
    <div class="form-group">
      <label for="Email">Email or Username</label>
      @Html.TextBoxFor(m => m.UserName, new{@class="form-control",@id="Email",@placeholder="Enter Your Email Address"})
    </div>
    <div class="form-group">
      <label for="Password">Password</label>
      <input type="text" class="form-control" id="Password" placeholder="Enter Your Password">
    </div>
     <input type="submit" value="Login" class="btn btn-lg btn-primary btn-block">
 }
 </div>
</main>

<script src="~/js/login.js"></script>
